{
  "expo": {
    "name": "Go Drive",
    "slug": "godrive-instrutor",
    "version": "1.0.7",
    "orientation": "portrait",
    "icon": "./assets/images/logo-app.png",
    "scheme": "godrive",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "locale": "pt-BR",
    "splash": {
      "image": "./assets/images/logo-app.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E3A8A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.deltaprotecnologia.godrive",
      "buildNumber": "11",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "Precisamos de acesso à sua biblioteca de fotos para você escolher uma foto de perfil.",
        "NSCameraUsageDescription": "Precisamos de acesso à câmera para você tirar uma foto de perfil.",
        "NSPhotoLibraryAddUsageDescription": "Precisamos de permissão para salvar imagens no seu dispositivo."
      }
    },
    "android": {
      "softwareKeyboardLayoutMode": "resize",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo-app.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.godrive.instrutor",
      "versionCode": 22
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "meta": {
        "title": "Go Drive - Plataforma de Auto Escolas",
        "description": "Sistema completo de gestão para auto escolas"
      }
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      "expo-notifications"
    ],
    "extra": {
      "apiUrl": "https://godrive-7j7x.onrender.com",
      "router": {},
      "eas": {
        "projectId": "389c60e3-be20-4ed0-9ad4-66f0689cfe60"
      }
    },
    "owner": "luis.zamboni",
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "experiments": {
      "typedRoutes": true
    }
  }
}
